<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface_white"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp"
        android:background="@color/surface_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo bộ từ vựng bằng AI"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            android:gravity="start"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập chủ đề hoặc từ vựng, AI sẽ tự động tạo thẻ học cho bạn"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chủ đề hoặc từ vựng"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: Công việc, du lịch,..."
            android:inputType="textMultiLine"
            android:textSize="16sp"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/text_primary"
            android:padding="16dp"
            android:minHeight="80dp"
            android:gravity="top|start"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_input_field"
            android:fontFamily="sans-serif"
            android:maxLines="3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng từ vựng"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etWordCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="10"
            android:inputType="number"
            android:text="10"
            android:textSize="16sp"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/text_primary"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_input_field"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích (tùy chọn)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: bóng đá, phim ảnh, du lịch, âm nhạc..."
            android:inputType="text"
            android:textSize="16sp"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/text_primary"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_input_field"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phong cách giải thích"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_input_field" />

        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:visibility="gone">

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/green_primary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đang tạo bộ từ vựng..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvLoadingSubtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vui lòng đợi trong giây lát..."
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Hủy"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_red"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:minWidth="80dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:ellipsize="none"
                android:maxLines="1"
                android:elevation="2dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGenerate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Tạo từ vựng"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_green"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:minWidth="80dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:ellipsize="none"
                android:maxLines="1"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

