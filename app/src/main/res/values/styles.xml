<!-- SAU KHI SỬA (ĐÚNG) -->
<resources>
    <!-- Các style khác của bạn... -->

    <style name="Flashcard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--
        SỬA LẠI THÀNH "android:cardCornerRadius" và "android:cardElevation"
        Lưu ý: Không dùng tiền tố "android:" trong tên của item, chỉ dùng nó trong giá trị của thuộc tính "name".
        -->
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="FlashcardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
